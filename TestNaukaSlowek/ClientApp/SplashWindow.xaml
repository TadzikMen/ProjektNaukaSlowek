<Window x:Class="ClientApp.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="SplashWindow" WindowStyle="None" WindowState="Maximized" Height="450" Width="800">
    <Grid>
        <Image gif:ImageBehavior.AnimatedSource="Images/splashScreen.gif" gif:ImageBehavior.RepeatBehavior="3" Stretch="Fill" ></Image>
    </Grid>
</Window>
