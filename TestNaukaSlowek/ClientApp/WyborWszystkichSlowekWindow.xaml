<Window x:Class="ClientApp.WyborWszystkichSlowekWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="Wybor Słówek" ResizeMode="NoResize" Height="270" Width="359" Background="Gray">
    <Border BorderThickness="2" BorderBrush="AntiqueWhite" Margin="20">
        <StackPanel HorizontalAlignment="Center" Margin="20">
            <Label Content="Wybierz Język:" Foreground="White"/>
            <ComboBox x:Name="cmBxJezyk" Cursor="Hand" Width="200" Margin="0,20,0,10"/>
            <Button x:Name="btnOk" Cursor="Hand" Content="Potwierdź" Margin="10,30,10,0" Height="30" Width="90" Click="btnOk_Click"/>
        </StackPanel>
    </Border>
</Window>
